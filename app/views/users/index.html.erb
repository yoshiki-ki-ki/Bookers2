<%= render 'info', user: @user %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<h4>image</h4>
<h4>name</h4>
<% @users.each do |user| %>
  <span>
    <%= image_tag user.get_profile_image(100,100) %>
  </span>
  <span>
    <%= user.name %>
  </span>
  <%= link_to "show", user_path(user.id) %>
<% end %>


