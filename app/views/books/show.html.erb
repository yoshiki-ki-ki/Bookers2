<p class="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="book_title">Title</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div class="field_with_errors">
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user_id) do %>
                <%= image_tag @books.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to @books.user.name, user_path(@books.user_id) %></td>
            <td>
              <%= link_to @books.title, book_path(@books.id) %>
            </td>
            <td><%= @books.body %></td>
            <% if @books.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@books) %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>