<%= render 'users/info', user: @user %>

<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<h4>Title</h4>
<h4>Opinion</h4>
<% @books.each do |book| %>
  <%= link_to user_path(book.user_id) do %>
    <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  <span><%= book.body %></span>
<% end %>
